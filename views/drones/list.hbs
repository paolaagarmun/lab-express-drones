<h2>Available drones</h2>

{{#each drones}}
<h4>{{this.name}}</h4>
<p>{{this.propellers}}</p>
<p>{{this.maxSpeed}}</p>
<a href="/drones/{{this._id}}/edit">Edit drone information</a>
<form action="/drones/{{this._id}}/delete" method="post">
  <button> Delete this drone </button>
</form>
<br/>
{{/each}}

<h3>
    <a href="/drones/create">Create a new drone</a>
</h3>